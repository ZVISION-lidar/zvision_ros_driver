<launch>
  <arg name="manager" default="zvlidar_node_manager" />

  <node pkg="nodelet" type="nodelet" name="$(arg manager)" args="manager" output="screen"/>

  <node pkg="nodelet" type="nodelet" name="$(arg manager)_driver"
        args="load zvlidar_sdk/ZVLidarNodelet $(arg manager)" output="screen">
    <param name="config_path" value="$(find zvlidar_sdk)/config/config.yaml"/>
  </node>

  <node pkg="rviz" name="rviz" type="rviz" args="-d $(find zvlidar_sdk)/config/rviz/rviz.rviz" />
</launch>
